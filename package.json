{
  "name": "mod-validator",
  "version": "1.0.0",
  "description": "Validator for game mod files",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mod-validator": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "tsc && node build-bundle.js",
